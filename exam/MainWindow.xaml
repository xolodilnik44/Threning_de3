<Window x:Class="exam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:exam"
        mc:Ignorable="d"
        Title="Путишествуй по России" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="66*"></RowDefinition>
            <RowDefinition Height="319*"></RowDefinition>
            <RowDefinition Height="49*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Background=" #bae3e8" Grid.Row="0"></Grid>
        <Grid Background="#445c93" Grid.Row="2"></Grid>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label Content="Logo" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0" FontSize="18" />
            <Label Content="Путишествуй по России" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="1" FontSize="18" />
        </Grid>
        <Frame Grid.Row="1" Name="listHotel"></Frame>
        <Grid/>
    </Grid>
</Window>
